FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver              GAMG;
        tolerance           1e-07;
        relTol              0.1;
        smoother            DICGaussSeidel;
        nPreSweeps          0;
        nPostSweeps         2;
        cacheAgglomeration  true;
        agglomerator        faceAreaPair;
        nCellsInCoarsestLevel 10;
        mergeLevels         1;
    }

    pFinal
    {
        $p;
        tolerance           1e-07;
        relTol              0;
    }

    "(U|k|epsilon|omega|R|nuTilda)"
    {
        solver              smoothSolver;
        smoother            symGaussSeidel;
        tolerance           1e-08;
        relTol              0.1;
    }

    UFinal
    {
        solver              smoothSolver;
        smoother            symGaussSeidel;
        tolerance           1e-08;
        relTol              0;
    }
}

PIMPLE
{
    nOuterCorrectors          2;
    nCorrectors               2;
    nNonOrthogonalCorrectors  1;

    // ★ 辞書形式で指定（v1612+）
    residualControl
    {
        p
        {
            tolerance   1e-4;
            relTol      0;
        }
        U
        {
            tolerance   1e-4;
            relTol      0;
        }
        "(k|epsilon|omega|R|nuTilda)"
        {
            tolerance   1e-4;
            relTol      0;
        }
    }
}

relaxationFactors
{
    fields
    {
        p               0.3;
    }
    equations
    {
        U               0.7;
        "(k|epsilon|omega|R|nuTilda)" 0.7;
    }
}

