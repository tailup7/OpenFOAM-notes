FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 36;

method          scotch;

// 以下は他メソッド用の雛形（scotch では未使用だが残してOK）
simpleCoeffs
{
    n       (1 1 1);
    delta   0.001;
}

hierarchicalCoeffs
{
    n       (1 1 1);
    delta   0.001;
    order   xyz;
}

manualCoeffs
{
    dataFile "";
}

// 分散ファイルシステムを使わない通常構成
distributed     no;
roots           ();

